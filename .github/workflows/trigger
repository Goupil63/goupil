name: Vinted Bot Trigger

on:
  workflow_run:
    workflows: ["Goupil"]
    types:
      - completed
    branches:
      - main # S'assure que le run est sur la branche principale

jobs:
  trigger_next_run:
    runs-on: ubuntu-latest
    permissions:
      id-token: write # Autorise Ã  lancer un autre workflow
    steps:
      - uses: actions/github-script@v6
        with:
          script: |
            github.rest.actions.createWorkflowDispatch({
              owner: '${{ github.repository_owner }}',
              repo: '${{ github.repository }}',
              workflow_id: 'Goupil',
              ref: '${{ github.ref }}'
            });
